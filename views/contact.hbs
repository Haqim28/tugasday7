       </nav>
       <!--End Navbar-->
        <div class="form-container d-flex justify-content-center align-items-center bg-secondary pt-2">
            <form >
                <h1 class="d-flex justify-content-center">GET IN TOUCH</h1>
                <div class="mb-3">
                    <label for="inputcontactname" class="form-label">Name</label>
                    <input type="text" class="form-control"id="inputcontactname" placeholder="You're Name">
                </div>
                <div class="mb-3">
                    <label for="inputcontactemail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputcontactemail" placeholder="example@mail.com">
                </div>
                <div class="mb-3">
                    <label for="inputcontactphone" class="form-label">Phone Number</label>
                    <input type="phone" class="form-control" id="inputcontactphone" >
                </div>
                <div class="mb-3"> 
                  <label for="selectcontactsubject" class="form-label">Subject</label>
                  <select id="selectcontactsubject" class="form-select" aria-label="Default select example">
                    <option value="" selected>Choose Subject</option>
                    <option value="I am Hiring"> I am Hiring</option>
                    <option value="Let's Collaboration"> Let's Collaboration</option>
                    <option value="Let's Talk"> Let's Talk</option>
                  </select>
                </div>        
                <div class="mb-3">
                  <label for="inputcontactmessage" class="form-label">Message</label>
                  <textarea class="form-control" id="inputcontactmessage" rows="5"></textarea>
              </div>
                <div class="d-flex justify-content-end mt-5 ">
                    <button type="button" class="btn btn-primary" onclick="submitData()">Submit</button>
                </div> 
                
                  
            </form>
        </div>  
